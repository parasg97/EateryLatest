<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.persi.eatery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".RestaurantActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Login_Activity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".ShoppingCart" />
        <activity android:name=".Pizzeria" />
        <activity android:name=".Cheese" />
        <activity android:name=".SandP" />
        <activity android:name=".Tables" />
        <activity android:name=".ThankYou" />
        <activity android:name=".Checkout"></activity>
    </application>

</manifest>